# Server Configuration
HOST=0.0.0.0
PORT=8080

# Redis Configuration
REDIS_URL=redis://127.0.0.1:6379

# WebSocket Configuration
WS_PING_INTERVAL_SECS=15
WS_PING_TIMEOUT_SECS=30

# Shutdown Configuration
SHUTDOWN_GRACE_PERIOD_SECS=30

# JWT Configuration
JWT_SECRET=<generate-with-python3 -c "import secrets; print(secrets.token_urlsafe(48))">
JWT_ALGORITHM=HS256

# PubSub Configuration
PUBSUB_POOL_SIZE=64  # Number of Redis PubSub connections in pool

# Logging Configuration
RUST_LOG=info,wsproxy=debug
LOG_LEVEL=info